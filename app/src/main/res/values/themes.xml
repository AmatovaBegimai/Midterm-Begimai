<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MidtermBegimai" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="model_name">
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/nike_air</item>
        <item name="android:textColor">@color/nike_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="model_disc">
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/nike_air_zoom</item>
        <item name="android:textColor">@color/nike_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="price">
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/_299_43</item>
        <item name="android:textColor">@color/nike_light_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="size">
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/select_size</item>
        <item name="android:textColor">@color/nike_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="size_choose">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nike_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="color_choose">
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/select_color</item>
        <item name="android:textColor">@color/nike_blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>
</resources>